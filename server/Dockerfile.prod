# Stage 1: Build the server
FROM node:18 AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: Run the server
FROM node:18-slim
WORKDIR /app
COPY --from=builder /app/dist ./
COPY package*.json ./
RUN npm install
RUN npm run build

# Set the command to start the server
CMD ["node", "dist/index.js"] # Assuming your entry point is index.js in the dist folder