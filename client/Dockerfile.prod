# Stage 1: Build the React application
FROM node:18 AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: Serve the application with Nginx
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy the Nginx configuration (if you have a custom one)
# COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80 for HTTP and 443 for HTTPS (adjust if needed)
EXPOSE 80 443

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]